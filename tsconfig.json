{
    "compilerOptions": {
        "alwaysStrict": true,
        "pretty": true,
        "target": "es5",
        "module": "none",
        "allowJs": true,
        "checkJs": false,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "lib": ["esnext", "dom"],
        "noImplicitAny": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "outFile": "src/js/bundle.js"
    },
    "exclude": ["node_modules", "src/app/**/*.spec.js"],
    "include": ["src/app/**/*.module.js", "src/app/**/*.js"]
}
