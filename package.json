{
    "name": "contacts-manager",
    "version": "1.0.0",
    "description": "Contacts Manager app by Todd Motto with Webpack, TS support, BS4, angular-translate to support your migration",
    "scripts": {
        "build": "npm-run-all build:*",
        "build:ts": "tsc",
        "build:css": "npm-run-all --parallel css:compile* --sequential css:prefix* css:minify*",
        "css:compile": "node-sass --output-style expanded --source-map true --source-map-contents true --precision 6 src/sass/style.scss src/css/style.css",
        "css:prefix": "postcss --config build/postcss.config.js --replace \"src/css/*.css\" \"!src/css/*.min.css\"",
        "css:minify": "cleancss --level 1 --source-map --source-map-inline-sources --output src/css/style.min.css src/css/style.css",
        "css:minify-vendor": "cleancss --level 1 --source-map --source-map-inline-sources --output src/css/vendor.min.css src/css/vendor.css",
        "clean:vendor": "rimraf src/js/vendor.*",
        "clean:bundle": "rimraf src/js/bundle.*",
        "clean": "npm-run-all clean:*",
        "copy": "npm-run-all copy:*",
        "concat": "npm-run-all concat:vendor:*",
        "concat:vendor:js": "node build/bundle.javascript.js",
        "concat:vendor:css": "node build/bundle.css.js",
        "minify:vendorjs": "uglifyjs src/js/vendor.js -o src/js/vendor.min.js",
        "start": "serve --single src/",
        "test": "karma start"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/peterblazejewicz/contacts-manager.git"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/peterblazejewicz/contacts-manager/issues"
    },
    "homepage": "https://github.com/peterblazejewicz/contacts-manager#readme",
    "dependencies": {
        "@fortawesome/fontawesome": "^1.1.3",
        "@fortawesome/fontawesome-free-brands": "^5.0.6",
        "@fortawesome/fontawesome-free-regular": "^5.0.6",
        "@fortawesome/fontawesome-free-solid": "^5.0.6",
        "angular-ui-router": "1.0.0-beta.2",
        "angular": "1.5.9",
        "angular-loading-bar": "0.9.0",
        "angular-messages": "1.5.9",
        "angular-translate": "2.15.2",
        "angularfire": "^2.3.0",
        "bootstrap": "^4.0.0",
        "firebase": "^4.10.1",
        "font-awesome": "^4.7.0"
    },
    "devDependencies": {
        "@types/angular": "^1.5.9",
        "@types/angular-loading-bar": "0.0.32",
        "@types/angular-mocks": "1.5.9",
        "@types/angular-translate": "^2.15.1",
        "@types/angular-ui-router": "^1.1.37",
        "@types/angularfire": "^0.8.33",
        "@types/chalk": "^2.2.0",
        "@types/core-js": "^0.9.41",
        "@types/jasmine": "^2.5.47",
        "@types/node": "^7.0.14",
        "@types/rimraf": "^2.0.2",
        "@types/webpack-env": "^1.13.0",
        "angular-mocks": "1.5.9",
        "autoprefixer": "^8.1.0",
        "chalk": "^2.3.2",
        "clean-css-cli": "^4.1.11",
        "concat": "^1.0.3",
        "core-js": "^2.4.1",
        "coveralls": "^2.13.1",
        "fs-extra": "^5.0.0",
        "http-server": "^0.10.0",
        "jasmine-core": "^2.7.0",
        "karma": "^1.7.0",
        "karma-chrome-launcher": "^2.0.0",
        "karma-coverage": "^1.1.1",
        "karma-jasmine": "^1.1.0",
        "karma-spec-reporter": "0.0.32",
        "node-sass": "^4.7.2",
        "npm-run-all": "^4.1.2",
        "postcss-cli": "^5.0.0",
        "remap-istanbul": "^0.9.5",
        "rimraf": "^2.6.2",
        "sass-lint": "^1.11.1",
        "serve": "^6.4.11",
        "tslint": "^5.5.0",
        "typescript": "^2.7.2",
        "uglify-js": "^3.3.12"
    }
}
